<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.appcompat.widget.AppCompatTextView
    android:layout_marginLeft="@dimen/_10sdp"
    android:id="@+id/tvStockActivity"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:text="Stock Activity"
    android:textSize="@dimen/_16sdp"
    android:textColor="@color/black"
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
    app:cardElevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_20sdp"
    app:layout_constraintTop_toBottomOf="@id/tvStockActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivcmplogo2"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:src="@drawable/adobe_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:id="@+id/tvcmpname2"
            android:text="ADB"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/ivcmplogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:id="@+id/tvcmpdetails2"
            android:text="Adobe Inc"
            android:textSize="@dimen/_10sdp"
            android:layout_below="@id/tvcmpname2"
            android:layout_toRightOf="@id/ivcmplogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvstockrate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_toRightOf="@id/tvcmpname2"
            android:text="25.94"
            android:textColor="@color/themeColorText"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvstockratepercen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvstockrate2"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="-1dp"
            android:layout_toRightOf="@id/tvcmpname2"
            android:drawableStart="@drawable/ic_arrow_upward"
            android:text="0.14%"
            android:textColor="@color/themeColorText"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvstockrateDoller2"
            android:layout_marginLeft="@dimen/_15sdp"
            android:padding="@dimen/_16sdp"
            android:text="$227.76"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tvstockrate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvstockrateDoller2"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="-22dp"
            android:layout_toRightOf="@id/tvstockrate2"
            android:text="10 Shares" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>