<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <include layout="@layout/stock_toolbar"/>
    <androidx.cardview.widget.CardView

        android:id="@+id/cardview3"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_80sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivcmplogo"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:src="@drawable/tesla" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:id="@+id/tvcmpname"
                android:text="Tesla"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/ivcmplogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:id="@+id/tvcmpdetails"
                android:text="Teshla Inc"
                android:textSize="@dimen/_8sdp"
                android:layout_below="@id/tvcmpname"
                android:layout_toRightOf="@id/ivcmplogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:id="@+id/tvstockratePrice"
                android:layout_marginLeft="@dimen/_8sdp"
                android:text="$227.76"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:drawableStart="@drawable/ic_arrow_upward"
                android:text="19,43%(+1.75%)"
                android:textColor="@color/themeColorText"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvstockratePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <HorizontalScrollView
        android:id="@+id/chipsBtn"
        android:layout_marginTop="@dimen/_48sdp"
        app:layout_constraintTop_toBottomOf="@id/cardview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <androidx.appcompat.widget.AppCompatButton
          android:layout_marginLeft="@dimen/_8sdp"
          android:layout_marginRight="@dimen/_8sdp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_shape"
          android:text="1D"
          android:textColor="@color/white"
          />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:text="1D"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:text="1W"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:text="1M"
            android:textColor="@color/white"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:text="ALL"
            android:textColor="@color/white"
            />
    </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:id="@+id/graph_layout"
        app:layout_constraintTop_toBottomOf="@id/chipsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
    android:background="@color/themeColorText"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_148sdp"/>

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/graph_layout"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivcmplogo2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:src="@drawable/tesla" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/tvoverview"
            android:text="Overview"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/ivcmplogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivquestion"
            android:src="@drawable/question"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"/>
        </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:text="Open" />

                <TextView
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:text="Day low" />
                <TextView
                    android:layout_marginLeft="@dimen/_55sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:text="Day High" />
            </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/black"
                android:text="$330.11"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                />

            <TextView
                android:layout_marginLeft="@dimen/_33sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textColor="@color/black"
                android:text="$233.11"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginLeft="@dimen/_45sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/black"
                android:text="$342.11" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_marginLeft="@dimen/_15sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginRight="@dimen/_10sdp"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_40sdp"
    >
<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btnBuyNow"
    android:text="Buy"
    android:textColor="@color/white"
    android:textAllCaps="false"
    android:background="@drawable/btn_shape"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_50sdp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:text="Follow"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/btn_background_color"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_50sdp"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>