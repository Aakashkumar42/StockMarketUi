<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:padding="@dimen/_1sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cardline1"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivcmplogo"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:src="@drawable/adobe_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:id="@+id/tvcmpname"
                android:text="ADB"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/ivcmplogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:id="@+id/tvcmpdetails"
                android:text="Adobe Inc"
                android:textSize="@dimen/_10sdp"
                android:layout_below="@id/tvcmpname"
                android:layout_toRightOf="@id/ivcmplogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvstockrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_toRightOf="@id/tvcmpname"
                android:text="25.94"
                android:textColor="@color/themeColorText"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvstockratepercen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvstockrate"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="-1dp"
                android:layout_toRightOf="@id/tvcmpname"
                android:drawableStart="@drawable/ic_arrow_upward"
                android:text="0.14%"
                android:textColor="@color/themeColorText"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvstockrateDoller"
                android:layout_marginLeft="@dimen/_15sdp"
                android:padding="@dimen/_16sdp"
                android:text="$227.76"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/tvstockrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvshares2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvstockrateDoller"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="-22dp"
                android:layout_toRightOf="@id/tvstockrate"
                android:text="10 Shares" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
   <LinearLayout
       app:layout_constraintTop_toBottomOf="@id/cardline1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="@dimen/_1sdp"/>
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>